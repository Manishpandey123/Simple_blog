<title class="navv"><% content_for :page_title, "Edit Blog"%></title>

<div class="container">
<%= form_for @post do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, class: "form-control" %><br/>
    </div>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, autofocus: true, class: "form-control" %><br />
    </div>
    <div class="actions">
        <%= f.submit "Update Blog", class: "btn btn-primary" %><br />
    </div>
<% end %>
</div>